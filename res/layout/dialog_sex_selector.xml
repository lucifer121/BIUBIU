<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="bottom"
    android:orientation="horizontal" >

    <View
        android:id="@+id/bottom_view_dialog_sex_selector"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:id="@+id/bottom2_view_dialog_sex_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_view_dialog_sex_selector" >

        <TextView
            android:id="@+id/hint_dialog_sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/register_one_sex_dralog_hint" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/hint_dialog_sex_tv"
            android:background="@color/gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/hint_dialog_sex_tv"
            android:background="@color/gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/center_dialog_sex_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom2_view_dialog_sex_selector"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_man_sexselector"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/main_icon_touxiang" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_woman_sexselector"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/main_icon_touxiang" />

            <!--
                 <TextView
                android:id="@+id/tv_woman_sexselector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:text="女生" />
            -->
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>