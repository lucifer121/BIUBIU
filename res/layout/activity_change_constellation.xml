<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

   <RelativeLayout
        android:id="@+id/top_changname_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center" >

        <RelativeLayout
            android:id="@+id/back_changexingzuo_mine_rl"
            android:layout_width="54dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            
            android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center" >

            <ImageView
                android:id="@+id/back_changexingzuo_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mine_alter_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="修改星座"
            android:textColor="#a0a0a0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mine_changexingzuo_wancheng_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/back_changename_mine"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="#33c6e5"
            android:textSize="15sp" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/top_changname_rl"
        android:background="#cccccc" />
    
     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"       
        android:orientation="horizontal">
     <TextView
        android:id="@+id/tip_city_change_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:text="星座"
        android:textColor="#a0a0a0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/constellationName_change_city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tip_city_change_tv"
        android:background="@null"
        android:text=""
        android:textColor="#707070"
        android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="1px"
       	android:background="#33c6e5"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="6dp"
        />

    <TextView
        android:id="@+id/tip_changeMajor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    
        android:drawableLeft="@drawable/mine_alter_img_point_blue"
        android:drawablePadding="4dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"       
        android:text="选择你的星座"
        android:textColor="#da33c6e5"
        android:textSize="12sp" />
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:background="@color/gray">
    
    	<TextView android:layout_width="wrap_content"
    	    android:layout_height="20dp"
    	    android:gravity="center"
    	    android:text="选择你的星座"/>
    	<View android:layout_width="match_parent"
    	    android:layout_height="1px"
    	    android:background="@color/tablebar_check"/>
    
        <com.android.biubiu.common.city.WheelView
            android:id="@+id/id_constellation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/gray">
            </com.android.biubiu.common.city.WheelView>
        </LinearLayout>

</LinearLayout>
