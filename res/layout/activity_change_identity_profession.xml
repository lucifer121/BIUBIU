<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_tag_bg"
   >

   <RelativeLayout
        android:id="@+id/top_changname_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center" 
        android:background="@color/mine_chird_top_bg">

        <RelativeLayout
            android:id="@+id/back_changexingzuo_mine_rl"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            
            android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center" >

            <ImageView
                android:id="@+id/back_changexingzuo_mine"
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:src="@drawable/main_name_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_change_identity_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="身份/职业"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mine_identity_profession_wancheng_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/back_changename_mine"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="#33c6e5"
            android:textSize="15sp" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/top_changname_rl"
        android:background="#cccccc" />
    
     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"       
        android:orientation="horizontal">
     <TextView
        android:id="@+id/tip_identity_profession_change_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:text="身份/职业"
        android:textColor="#a0a0a0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/identity_profession_change_city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tip_identity_profession_change_tv"
        android:background="@null"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="1px"
       	android:background="@color/mine_chird_view_bottom"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="6dp"
        />

   
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
    
    	<TextView android:layout_width="wrap_content"
    	    android:layout_height="30dp"
    	    android:gravity="center"
    	    android:textColor="#a0a0a0"
    	   
    	    android:text="@string/mine_identity_profession_title"/>
    	<View android:layout_width="match_parent"
    	    android:layout_height="1px"
    	    android:background="@color/tablebar_check"/>
    
        <com.android.biubiu.common.city.WheelView
            android:id="@+id/id_identify_profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:background="@color/gray">
            </com.android.biubiu.common.city.WheelView>
        </LinearLayout>

</LinearLayout>
