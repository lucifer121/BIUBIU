<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/main_yello" >

        <ImageView
            android:id="@+id/title_left_imv"
            android:layout_width="23dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:padding="6dp"
            android:src="@drawable/main_icon_back" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/login_title_text"
            android:textColor="@color/login_title_text"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="59dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/main_icon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="40dp" 
        android:layout_marginRight="40dp">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            
            android:text="@string/register_two_inschool" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/register_two_outschool" />
    </LinearLayout>
    
    
    <RelativeLayout
        android:id="@+id/registertwo_center3_rl"
        android:layout_width="match_parent"
        android:layout_height="32dp"
     
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        >

        <ImageView
            android:id="@+id/school_registertwo_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/main_sex_icon" />

        <TextView
            android:id="@+id/school_registertwo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/school_registertwo_img"
            android:hint="@string/register_two_selecter_school"
            android:text=""
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/school_registertwo_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            
            android:src="@drawable/main_right_icon" />
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/registertwo_center3_rl"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/register_view" />
    
    <RelativeLayout
        android:id="@+id/registertwo_center4_rl"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/registertwo_center3_rl"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        >

        <ImageView
            android:id="@+id/job_registertwo_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/main_birthday_icon" />

        <TextView
            android:id="@+id/job_registertwo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/job_registertwo_img"
            android:hint="@string/register_two_select_job"
            android:text=""
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/job_registertwo_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            
            android:src="@drawable/main_right_icon" />
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/registertwo_center3_rl"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/register_view" />
    
    <RelativeLayout 
        android:id="@+id/next_registertwo_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        
        android:layout_marginTop="78dp"
        android:layout_marginLeft="62.5dp"
        android:layout_marginRight="62.5dp"
        
        android:background="@drawable/main_btn_light">

        <TextView
            android:id="@+id/next_registerone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/register_name_text"
            android:text="@string/register_one_hint_next" />

        </RelativeLayout>

</LinearLayout>